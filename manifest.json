{
  "manifest_version": 3,
  "name": "JD Helper",
  "version": "1.0",
  "description": "京东抢购助手",
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://item.yiyaojd.com/*",
        "https://item.jd.com/*",
        "https://cart.jd.com/*",
        "https://trade.jd.com/*"
      ],
      "js": [
        "background.js"
      ],
      "css": ["main.css"],
      "run_at": "document_idle"
    }
  ]
}
